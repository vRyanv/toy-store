<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/images/icon-web.png">
    <title>Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/css/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">

    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/loading.animation.css">
    <link rel="stylesheet" href="/css/product.css">

</head>
<body>
<!--    animation loading-->
 <%- include('loadingAnimation.ejs') %>
<!--    animation loading-->
<div class="container-fluid" style="height: 100%">
    <div class="row h-100">
        <div class="col-11" style="margin-right: 8rem;">
            <div id="root_body">
                <% if(site === 'product') { %>
                    <%- include('product.ejs') %>
                <%} else if(site === 'category') { %>
                    <%- include('category.ejs') %>
                <%} else if(site === 'supplier') { %>
                    <%- include('supplier.ejs') %>
                <% } else if(site === 'shop'){%>
                    <%- include('shop.ejs') %>
                <% } %>
            </div>
        </div>
        <div class="col-1" id="block_dashboard">
            <div id="dashboard">
                <a href="/product" style="text-decoration: none"><div style="border-radius: 4rem 4rem 0 0;" class="controller-in-dashboard <% if(site === 'product') { %> active <%}%>" ><i class="bi-xbox"></i></div></a>
                <a href="/category" style="text-decoration: none"><div class="controller-in-dashboard  <% if(site === 'category') { %> active <%}%>" ><i class="bi-stack" aria-hidden="true"></i> </div></a>
                <a href="/supplier" style="text-decoration: none"><div class="controller-in-dashboard  <% if(site === 'supplier') { %> active <%}%>" ><i class="bi-gpu-card" aria-hidden="true"></i></div></a>
                <a href="/logout" style="text-decoration: none"><div class="controller-in-dashboard"><i class="bi-box-arrow-right" aria-hidden="true"></i></div></a>
            </div>
        </div>
    </div>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<% if(site === 'product') { %>
    <script src="/js/product.js"></script>
<%} else if(site === 'category') { %>
    <script src="/js/category.js"></script>
<%} else if(site === 'supplier') { %>
    <script src="/js/supplier.js"></script>
<% } %>
</html>